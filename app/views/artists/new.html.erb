<h1>Create New Artists here!</h1>

<%= form_for(@artist) do |f| %>

     <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
   
    <p>Select a Genre:</p>
    
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
    

    <p>Create a new Genre: </p>
    <%= f.fields_for :genre do |a| %>
        <%= a.label :name %>
        <%= a.text_field :name %>
    <% end %>
    <br>
    
    <%= f.submit "Create Artist" %>
<% end %>